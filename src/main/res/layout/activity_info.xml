<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFE8E4"
    tools:context=".info">

    <!-- Header TextView -->
    <TextView
        android:id="@+id/Infottid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electric Table Information"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Image -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/info_table"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/Infottid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Information TextView -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is where you can find all the important information about Sean Electrics. The electric table, often referred to as an electricity tariff or rate schedule, outlines the pricing structure for electricity consumption. It typically includes details such as the cost per unit of electricity (usually measured in kilowatt-hours, kWh), any fixed charges, and possibly tiered pricing for different levels of consumption."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="8sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />

    <!-- Copyright TextView -->
    <TextView
        android:id="@+id/copyrightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright 2024 by Adam Rizqan"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
